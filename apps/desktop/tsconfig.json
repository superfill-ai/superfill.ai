{
  "extends": "../../packages/tsconfig/react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "./src/renderer/*"
      ],
      "@superfill/ui": [
        "../../packages/ui/src"
      ],
      "@superfill/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@superfill/shared": [
        "../../packages/shared/src"
      ],
      "@superfill/shared/*": [
        "../../packages/shared/src/*"
      ],
      "@superfill/storage": [
        "../../packages/storage/src"
      ],
      "@superfill/storage/*": [
        "../../packages/storage/src/*"
      ]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "electron.vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-electron",
    "src/preload/index.d.ts"
  ]
}
